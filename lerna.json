{
    "packages": ["packages/*", "projects/*"],
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": [
                "packages/*/test/**",
                "packages/*/stories/**",
                "**/*.md",
                "**/tsconfig.json"
            ]
        }
    }
}
